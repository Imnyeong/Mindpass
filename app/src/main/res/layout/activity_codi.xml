<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_gravity="center"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:src="@drawable/todaystyle"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border"
        >
        <ImageView
            android:id="@+id/clothtop"
            android:src="@drawable/top"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/clothtopView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:text=""
                android:fontFamily="@font/bmdohyeon_ttf"/>
            <TextView
                android:id="@+id/topColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:text=""
                android:fontFamily="@font/bmdohyeon_ttf"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/topimg"
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="45dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border"
        >
        <ImageView
            android:id="@+id/clothbottom"
            android:src="@drawable/pants"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/clothbottomView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:text=""
                android:fontFamily="@font/bmdohyeon_ttf"/>
            <TextView
                android:id="@+id/bottomColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:text=""
                android:fontFamily="@font/bmdohyeon_ttf"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/pantsimg"
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="45dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border"
        >
        <ImageView
            android:id="@+id/shoes"
            android:src="@drawable/shoes"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/shoesView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:text=""
                android:fontFamily="@font/bmdohyeon_ttf"/>
            <TextView
                android:id="@+id/shoesColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:text=""
                android:fontFamily="@font/bmdohyeon_ttf"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/shoesimg"
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="45dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/border"
        >
        <ImageView
            android:id="@+id/coat"
            android:src="@drawable/coat"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/coatView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:text=""
                android:fontFamily="@font/bmdohyeon_ttf"/>
            <TextView
                android:id="@+id/coatColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:text=""
                android:fontFamily="@font/bmdohyeon_ttf"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/coatimg"
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="45dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/coatborder"
        >
        <ImageView
            android:id="@+id/bag"
            android:src="@drawable/backpack"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/bagView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:text=""
                android:fontFamily="@font/bmdohyeon_ttf"/>
            <TextView
                android:id="@+id/bagColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:text=""
                android:fontFamily="@font/bmdohyeon_ttf"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/bagimg"
            android:layout_gravity="center"
            android:layout_width="45dp"
            android:layout_height="45dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center"
        >
    <Button
        android:id="@+id/Another"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/coloWhite"
        android:text="코디 검색"
        android:fontFamily="@font/bmdohyeon_ttf"/>

    <Button
        android:id="@+id/Like"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:paddingTop="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/colorPrimary"
        android:textColor="@color/coloWhite"
        android:drawableTop="@drawable/like" />
    </LinearLayout>




</LinearLayout>